<div id="createFolderModal" class="modal" style="display: none">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <form action="/drive/folder/new" method="post">
      <label for="folder_name">New Folder Name:</label>
      <input
        type="text"
        name="folder_name"
        id="folder_name"
        placeholder="Untitled Folder"
        required
      />
      <button type="submit">Create Folder</button>
    </form>
  </div>
</div>

<button onclick="openModal('My Modal Title', 'This is the body content.', 'Action', handleModalAction)">Open Modal</button>


