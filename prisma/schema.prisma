generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  hash      String
  firstName String?
  lastName  String?
  folders   Folder[]
}

model Folder {
  id         Int       @id @default(autoincrement())
  name       String    @default("New Folder")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
  parentId   Int?
  parent     Folder?   @relation("ParentSubFolderRel", fields: [parentId], references: [id], onDelete: Cascade)
  subfolders Folder[]  @relation("ParentSubFolderRel")
}
